<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Spiel1"
    android:background="@android:color/black"
    android:id ="@+id/gameonescreen">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id = "@+id/l1"
            android:visibility="visible">


            <Button
                android:id="@+id/Spieler1Button"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:background="@android:color/holo_orange_dark"
                android:onClick="Spieler1Dr端ckt"
                android:rotation="-180"
                android:text="SPIELER 1" />

            <TextView
                android:textColor="@android:color/white"
                android:id="@+id/Spieler1Score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:text="0"
                android:rotation="-180"
                android:visibility="visible"
                android:textAlignment="center"
                />

            <TextView
                android:id="@+id/AnsageTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:rotation="-180"
                android:textColor="@android:color/white" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/l2"
        android:gravity="bottom"
        android:visibility="visible">

        <TextView
            android:id="@+id/AnsageTextView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="@android:color/white" />

        <TextView
            android:textColor="@android:color/white"
            android:id="@+id/Spieler2Score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:text="0"
            android:textAlignment="center"
            android:visibility="visible" />

        <Button
            android:id="@+id/Spieler2Button"
            android:layout_width="match_parent"
            android:layout_height= "130dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@android:color/holo_orange_dark"
            android:onClick="Spieler2Dr端ckt"
            android:text="SPIELER 2" />


    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/l1"
            android:orientation="horizontal"
            android:id="@+id/l2"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="320dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Spielbedingungen1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:rotation="-180"
                    android:text="Dr端cke sobald die richtige Farbe erscheint!"
                    android:textColor="@android:color/holo_orange_dark"
                    android:textSize="25dp"
                    android:visibility="visible"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/Spielbedingungen2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Dr端cke sobald die richtige Farbe erscheint!"
                    android:textColor="@android:color/holo_orange_dark"
                    android:textSize="25dp"
                    android:visibility="visible"
                    tools:visibility="visible" />
            </LinearLayout>

            <ImageView
                android:id="@+id/SpielHellImageView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:visibility="gone"
                tools:visibility="gone" />
        </LinearLayout>


</RelativeLayout>